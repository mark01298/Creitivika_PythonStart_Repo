x=0
y=0
c=0
v=255
def setup():
    size(800,800)
def draw():
    global x,y,c,v
    if y == 1:
        x=255
    if y == 2:
        v=0
    if y == 3:
        c=255
    fill(c,v,x)
    ellipse(400,400,300,300)
def mouseClicked():
    global x,y,c,v
    xDif = 400 - mouseX
    yDif = 400 - mouseY
    if sqrt(xDif*xDif + yDif*yDif) < 150:
        if y==0:
            y=1
        if y==2:
            y=2
        if y==3:
            y=0
        if y==1:
            y=2
       
